{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Mingw",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "source/Engine/Main.cpp",
                "source/Engine/Engine3D.cpp",
                "source/Engine/Graphics.cpp",
                "source/OpenGL/LoadShader.cpp",
                "-I../mingw_dev_lib/include",
                "-L../mingw_dev_lib/lib",
                "-L./binaries",
                "-lmingw32",
                "-lglew32",
                "-lopengl32",
                "-lglu32",
                "-lglfw3dll",
                "-o",
                "binaries/Main",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build with Clang",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "source/Main.cpp",
                "-o",
                "binaries/Main.out",
                "--debug"
            ],
            "group": "build"
        }
    ]
}
